<Window x:Class="Wpf_AZS_DB.Views.CheckView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_AZS_DB.Views"
        mc:Ignorable="d"
                Title="CheckView" Height="550" Width="500" Loaded="Window_Loaded" Background="#FFF7E3"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60px"/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.Row="0" Text="Чек за покупку" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Margin="0,50" x:Name="txtCheck" Foreground="#FF0A1D7C" FontSize="22" FontWeight="Bold" FontFamily="Consolas"/>
        <Button x:Name="btnOk" Grid.Row="1" Content="Ok" Width="100"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"
                 Click="btnOk_Click" FontSize="18" FontWeight="Bold" />
    </Grid>
</Window>
